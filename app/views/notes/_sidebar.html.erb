<div class="sidebar">
  <% if user_signed_in? && @notes.present? %>
    <div class="sidebar-search">
      <%= form_tag search_notes_path, method: :get do %>
        <%= text_field_tag :keywords, params[:keywords], placeholder: "Search..." %>
      <% end %>
    </div>

    <% @notes.each do |note| %>
      <%= link_to note_path(note), note_link_options(note) do
      %>
        <div class="pin"></div>

        <div class="sidebar-item-title" title="<%= note_title(note) %>">
          <%= note_title(note) %>
        </div>

        <div class="sidebar-item-date" title="<%= l note.updated_at, format: :full %>">
          Last edited: <%= time_ago_in_words(note.updated_at) %> ago
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>
